doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Lista Utenti
        style.
            body {
                font-family: Arial, sans-serif;
                background-color: #5080fd; /* Blu chiaro della palette */
                margin: 0;
                padding: 1rem;
            }
            .container {
                max-width: 1200px;
                margin: 0 auto;
                padding: 1rem;
                background-color: #FFFFFF; /* Bianco */
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }
            h1 {
                color: #1f2b5b; /* Blu scuro della palette */
                text-align: center;
                margin-bottom: 1rem;
            }
            .search-bar {
                display: flex;
                justify-content: center;
                margin-bottom: 1.5rem;
            }
            input[type="text"] {
                width: 100%;
                max-width: 500px;
                padding: 0.5rem;
                border: 1px solid #3dbdec; /* Blu brillante della palette */
                border-radius: 5px;
                font-size: 1rem;
            }
            .card-container {
                display: flex;
                flex-wrap: wrap;
                gap: 1rem;
                justify-content: center;
            }
            .card {
                background-color: #1f2b5b; /* Blu scuro della palette */
                color: #FFFFFF; /* Bianco */
                padding: 1rem;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                width: 200px;
                text-align: center;
                cursor: pointer;
                text-decoration: none;
                transition: transform 0.2s;
                border: 1px solid #3dbdec; /* Blu brillante della palette */
            }
            .card:hover {
                transform: scale(1.05);
            }
            .card h3 {
                margin: 0.5rem 0;
                font-size: 1.2rem;
            }
            .card p {
                margin: 0.5rem 0;
            }
            @media (max-width: 768px) {
                .card {
                    width: 100%;
                }
            }
    body
        .container
            h1 Lista dei Pazienti
            .search-bar
                input(type="text" id="searchInput" placeholder="Cerca un utente...")
            .card-container#cardContainer
                each user in users
                    a.card(href=`/users/${user.id}`)
                        h3= user.name

        script.
            const searchInput = document.getElementById('searchInput');
            const cardContainer = document.getElementById('cardContainer');

            searchInput.addEventListener('input', (e) => {
                const query = e.target.value.toLowerCase();
                const cards = cardContainer.children;
                Array.from(cards).forEach(card => {
                    const name = card.querySelector('h3').textContent.toLowerCase();
                    if (name.includes(query)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
